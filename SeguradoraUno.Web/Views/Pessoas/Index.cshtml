@model IEnumerable<SeguradoraUno.Domain.Entities.Pessoa>

@{
    ViewBag.Title = "Index";
}

<h2>Pessoas</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Cpf/Cnpj</th>
                <th>Data de Nascimento</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.CpfCnpj</td>
                    <td>@item.DataNascimento.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>