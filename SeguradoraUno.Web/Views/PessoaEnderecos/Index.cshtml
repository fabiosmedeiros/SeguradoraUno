@model IEnumerable<SeguradoraUno.Domain.Entities.PessoaEndereco>

@{
    ViewBag.Title = "Index";
}

<h2>Pessoa/Endereços</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Logradouro</th>
                <th>Número</th>
                <th>CEP</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Pessoa.Nome</td>
                    <td>@item.Logradouro</td>
                    <td>@item.Numero</td>
                    <td>@item.Cep</td>
                </tr>
            }
        </tbody>
    </table>
</div>